@model IEnumerable<ViverBemADM.Models.Sellers>

@{
    ViewBag.Title = "Início - Vendedores";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Inserir Novo", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="row">
    <div class="col-xs-12 col-md-12">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SellerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SellerPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SellerEmail)
                </th>
                <th>
                    @Html.Label("Ações")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellerPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellerEmail)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.SellersID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Detalhes", "Details", new { id = item.SellersID }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Excluir", "Delete", new { id = item.SellersID }, new { @class = "btn btn-danger" })


                    </td>
                </tr>
            }

        </table>
    </div>
</div>


