@model ViverBemADM.Models.Sales

@{
    ViewBag.Title = "Inserir - Vendas";
}

<h2>@ViewBag.Title </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SaleValue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SaleValue, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
                <strong> @Html.ValidationMessageFor(model => model.SaleValue, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PaymentTime, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                <strong>@Html.ValidationMessageFor(model => model.PaymentTime, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SalesSituation.SituationName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SalesSituationID", null, htmlAttributes: new { @class = "form-control" })
                <strong> @Html.ValidationMessageFor(model => model.SalesSituationID, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SellerPercentage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SellerPercentage, new { htmlAttributes = new { @class = "form-control",@type="number", @step = "any", @min = "0" } })
                <strong>   @Html.ValidationMessageFor(model => model.SellerPercentage, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumberOfEdition, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberOfEdition, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
                <strong>@Html.ValidationMessageFor(model => model.NumberOfEdition, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YearOfEdition, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YearOfEdition, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
                <strong>@Html.ValidationMessageFor(model => model.YearOfEdition, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Client.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClientID", null, htmlAttributes: new { @class = "form-control" })
                <strong> @Html.ValidationMessageFor(model => model.ClientID, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentForm.PaymentFormName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PaymentFormID", null, htmlAttributes: new { @class = "form-control" })
                <strong> @Html.ValidationMessageFor(model => model.PaymentFormID, "", new { @class = "text-danger" }) </strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sellers.SellerName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SellersID", null, htmlAttributes: new { @class = "form-control" })
                <strong>@Html.ValidationMessageFor(model => model.SellersID, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsPaperSizes.SizeName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NewsPaperSizesID", null, htmlAttributes: new { @class = "form-control" })
                <strong> @Html.ValidationMessageFor(model => model.NewsPaperSizesID, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Retornar a Lista", "Index", null, new { @class = "btn btn-primary" })
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


