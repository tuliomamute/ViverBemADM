@model ViverBemADM.Models.Sellers

@{
    ViewBag.Title = "Editar - Vendedores";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SellersID)

        <div class="form-group">
            @Html.LabelFor(model => model.SellerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SellerName, new { htmlAttributes = new { @class = "form-control" } })
                <strong> @Html.ValidationMessageFor(model => model.SellerName, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SellerPhone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SellerPhone, new { htmlAttributes = new { @class = "form-control" } })
                <strong>   @Html.ValidationMessageFor(model => model.SellerPhone, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SellerEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SellerEmail, new { htmlAttributes = new { @class = "form-control" } })
                <strong>  @Html.ValidationMessageFor(model => model.SellerEmail, "", new { @class = "text-danger" })</strong>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Retornar a Lista", "Index",null, new { @class = "btn btn-primary" })
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
